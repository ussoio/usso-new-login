{
    "name": "usso-new-login",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "dev:up": "docker compose -f docker-compose.dev.yml up --build",
        "dev:down": "docker compose -f docker-compose.dev.yml down",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clients:update": "bun run clients/update.mjs"
    },
    "devDependencies": {
        "@openapitools/openapi-generator-cli": "^2.25.2",
        "@workspace/eslint-config": "workspace:*",
        "@workspace/typescript-config": "workspace:*",
        "eslint": "^9.32.0",
        "prettier": "^3.6.2",
        "shadcn": "^3.5.0",
        "turbo": "^2.5.5",
        "typescript": "5.7.3"
    },
    "packageManager": "bun@1.2.3",
    "engines": {
        "node": ">=20"
    },
    "workspaces": {
        "packages": [
            "clients/*",
            "apps/*",
            "packages/*"
        ],
        "catalogs": {
            "state-manager": {
                "zustand": "^5.0.6",
                "nuqs": "^2.4.3"
            },
            "form": {
                "formik": "^2.4.6",
                "yup": "^1.6.1",
                "zod": "^3.24.2"
            },
            "api": {
                "@tanstack/react-query": "^5.80.6",
                "@tanstack/react-query-devtools": "^5.80.6",
                "axios": "^1.8.4"
            },
            "ui": {
                "@tailwindcss/postcss": "^4.1.11",
                "tailwindcss": "^4.1.11",
                "lucide-react": "^0.475.0",
                "next-themes": "^0.4.6"
            },
            "next": {
                "react": "^19.2.0",
                "react-dom": "^19.2.0",
                "next": "^15.5.5"
            },
            "build": {
                "@swc/cli": "^0.7.7",
                "@swc/core": "^1.11.24",
                "typescript": "^5.9.2"
            },
            "persian-tools": {
                "@persian-tools/persian-tools": "^3.6.0",
                "jalaliday": "^3.1.0",
                "@zoomit/dayjs-jalali-plugin": "^0.1.11",
                "moment-jalaali": "^0.10.4"
            },
            "utils": {
                "es-toolkit": "^1.34.1"
            }
        }
    }
}
